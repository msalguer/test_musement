"forecastType": {
    "name": "forecastType",
    "in": "query",
    "description": "Type of Forecast Weather for the City",
    "required": false,
    "schema": {
        "type": "string",
        "default": "today",
        "enum": [
            "today",
            "tomorrow",
            "day"
        ]
    }
},    
"forecastDay": {
    "name": "forecastDay",
    "in": "query",
    "description": "Forecast weather date | Use format: YYYY-MM-DD",
    "required": false,
    "schema": {
        "type": "string",
        "format": "date"
    }
}   